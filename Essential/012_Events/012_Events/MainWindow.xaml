<Window x:Class="_012_Events.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_012_Events"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="PlayButton" Content="Play |>" HorizontalAlignment="Left" Height="25" Margin="300,200,0,0" VerticalAlignment="Top" Width="50" Click="PlayButton_Click"/>
        <Button x:Name="PauseButton" Content="Pause ||" HorizontalAlignment="Left" Height="25" Margin="375,200,0,0" VerticalAlignment="Top" Width="50" Click="PauseButton_Click"/>
        <Button x:Name="StopButton" Content="Stop []" HorizontalAlignment="Left" Height="25" Margin="450,200,0,0" VerticalAlignment="Top" Width="50"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Margin="300,150,0,0" Text="TextBox" VerticalAlignment="Top" Width="200"/>

    </Grid>
</Window>
