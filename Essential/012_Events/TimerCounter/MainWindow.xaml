<Window x:Class="TimerCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimerCounter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="25" Margin="300,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Height="25" Margin="300,200,0,0" VerticalAlignment="Top" Width="50" Click="StartButton_Click"/>
        <Button x:Name="pauseButton" Content="Pause" HorizontalAlignment="Left" Height="25" Margin="375,200,0,0" VerticalAlignment="Top" Width="50" Click="PauseButton_Click"/>
        <Button x:Name="stopButton" Content="Stop" HorizontalAlignment="Left" Height="25" Margin="450,200,0,0" VerticalAlignment="Top" Width="50" Click="StopButton_Click"/>

    </Grid>
</Window>
