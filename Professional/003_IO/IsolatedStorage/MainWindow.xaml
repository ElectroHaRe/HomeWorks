<Window x:Class="IsolatedStorage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:IsolatedStorage"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Width="800" Height="400">
        <Button x:Name="button" Content="Save" HorizontalAlignment="Left" Margin="465,144,0,0" VerticalAlignment="Top" Width="80" Click="Button_Click" Height="31"/>
        <xctk:ColorPicker Name="cp" Margin="249,144,355,225" DisplayColorAndName="True" SelectedColorChanged="cp_SelectedColorChanged" AvailableColorsSortingMode="HueSaturationBrightness" Background="White" ShowDropDownButton="False" />
        <Label x:Name="label" Content="Pick some color" HorizontalAlignment="Left" Height="27" Margin="249,117,0,0" VerticalAlignment="Top" Width="177"/>
    </Grid>
</Window>
